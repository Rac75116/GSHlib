{
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.tabSize": 2,
  "[cpp]": {
    "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd",
  },
  "C_Cpp.intelliSenseEngine": "disabled",
  "clangd.arguments": [
    "--clang-tidy",
    "--function-arg-placeholders=0",
  ],
  "files.associations": {
    ".clangd": "yaml",
    ".clang-format": "yaml"
  }
}